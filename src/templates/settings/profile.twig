{% extends "base.twig" %}

{% block content %}

{% if name is empty %}
    {% set title = translate('Username is empty') %}
{% else %}
    {% set title = translate('User') ~ ' ' ~ name %}
{% endif %}

<h3>{{ title }}</h3>

{% if bio is empty %}
    <p>{{ translate('No user info') }}</p>
{% else %}
    {{ render_markdown(bio)|raw }}
{% endif %}

{% endblock %}